# Platform detection
if [ -f "$HOME/.config/scripts/platform.sh" ]; then
    source "$HOME/.config/scripts/platform.sh"
    dotfiles_export_platform
fi

if [ -z "${DOTFILES_PLATFORM:-}" ]; then
    DOTFILES_KERNEL="$(uname -s 2>/dev/null)"
    case "$DOTFILES_KERNEL" in
        Darwin*) DOTFILES_PLATFORM="macos" ;;
        Linux*)
            if grep -qi microsoft /proc/version 2>/dev/null; then
                DOTFILES_PLATFORM="wsl"
            else
                DOTFILES_PLATFORM="linux"
            fi
            ;;
        *) DOTFILES_PLATFORM="generic" ;;
    esac
    unset DOTFILES_KERNEL
    export DOTFILES_PLATFORM
fi

if [ -z "${DOTFILES_ROOT:-}" ] && [ -n "${(%):-%N}" ]; then
    DOTFILES_ROOT="$(cd "$(dirname "${(%):-%N}")/.." 2>/dev/null && pwd)"
    export DOTFILES_ROOT
fi

# Path configuration
[[ -d "$HOME/.local/bin" ]] && export PATH="$HOME/.local/bin:$PATH"
export GOPATH="$HOME"

if [ "$DOTFILES_PLATFORM" = "macos" ] && [[ -d /opt/homebrew/bin ]]; then
    export PATH="/opt/homebrew/bin:$PATH"
fi

# Zinit setup
ZINIT_HOME="${XDG_DATA_HOME:-${HOME}/.local/share}/zinit/zinit.git"
if [ ! -d "$ZINIT_HOME" ]; then
   mkdir -p "$(dirname "$ZINIT_HOME")"
   git clone https://github.com/zdharma-continuum/zinit.git "$ZINIT_HOME"
fi

source "${ZINIT_HOME}/zinit.zsh"

# Zinit plugins
zinit snippet OMZP::git
zinit snippet OMZP::sudo
zinit snippet OMZP::command-not-found

zinit light zsh-users/zsh-completions
zinit light zsh-users/zsh-autosuggestions
zinit light zsh-users/zsh-syntax-highlighting
zinit light zsh-users/zsh-history-substring-search
zinit light djui/alias-tips

# Completion setup
fpath+=~/.zfunc
autoload -Uz compinit && compinit

# Better completion styling
zstyle ':completion:*' menu select
zstyle ':completion:*' matcher-list 'm:{a-zA-Z}={A-Za-z}'

# History settings
HISTSIZE=10000
SAVEHIST=10000
setopt HIST_IGNORE_DUPS
setopt HIST_IGNORE_SPACE
setopt SHARE_HISTORY

# NVM setup (keep your existing config)
export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"
[ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"

# Source additional configurations
[ -f "$HOME/.config/zsh/aliases.zsh" ] && source "$HOME/.config/zsh/aliases.zsh"
[ -f "$HOME/.config/zsh/tool-checker.zsh" ] && source "$HOME/.config/zsh/tool-checker.zsh"

# Tool initializations (only if they exist)
command -v zoxide &> /dev/null && eval "$(zoxide init zsh)"
command -v direnv &> /dev/null && eval "$(direnv hook zsh)"

# FZF configuration
[ -f ~/.fzf.zsh ] && source ~/.fzf.zsh

# Oh My Posh prompt
POSH_CONFIG="${POSH_CONFIG:-$HOME/.config/oh-my-posh/theme.json}"
if command -v oh-my-posh &> /dev/null && [ -r "$POSH_CONFIG" ]; then
    eval "$(oh-my-posh init zsh --config "$POSH_CONFIG")"
fi

# Local overrides (not tracked in git)
[ -f ~/.zshrc.local ] && source ~/.zshrc.local
