# Path configuration - cross-platform
if [[ "$OSTYPE" == "darwin"* ]]; then
    # macOS - Homebrew paths
    export PATH="/opt/homebrew/bin:/usr/local/bin:$PATH"
else
    # Linux/WSL - local bin paths
    export PATH="$HOME/.local/bin:/usr/local/bin:$PATH"
fi

export PATH="$HOME/.local/bin:$PATH"
export GOPATH=$HOME

# Zinit setup
ZINIT_HOME="${XDG_DATA_HOME:-${HOME}/.local/share}/zinit/zinit.git"
if [ ! -d "$ZINIT_HOME" ]; then
   mkdir -p "$(dirname $ZINIT_HOME)"
   git clone https://github.com/zdharma-continuum/zinit.git "$ZINIT_HOME"
fi

source "${ZINIT_HOME}/zinit.zsh"

# Zinit plugins
zinit snippet OMZP::git
zinit snippet OMZP::sudo
zinit snippet OMZP::command-not-found

zinit light zsh-users/zsh-completions
zinit light zsh-users/zsh-autosuggestions
zinit light zsh-users/zsh-syntax-highlighting
zinit light zsh-users/zsh-history-substring-search
zinit light djui/alias-tips

# Completion setup
fpath+=~/.zfunc
autoload -Uz compinit && compinit

# Better completion styling
zstyle ':completion:*' menu select
zstyle ':completion:*' matcher-list 'm:{a-zA-Z}={A-Za-z}'

# History settings
HISTSIZE=10000
SAVEHIST=10000
setopt HIST_IGNORE_DUPS
setopt HIST_IGNORE_SPACE
setopt SHARE_HISTORY

# NVM setup (keep your existing config)
export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"
[ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"

# Source additional configurations
[ -f "$HOME/.config/zsh/aliases.zsh" ] && source "$HOME/.config/zsh/aliases.zsh"
[ -f "$HOME/.config/zsh/tool-checker.zsh" ] && source "$HOME/.config/zsh/tool-checker.zsh"

# Tool initializations (only if they exist)
command -v zoxide &> /dev/null && eval "$(zoxide init zsh)"
command -v direnv &> /dev/null && eval "$(direnv hook zsh)"

# FZF configuration
[ -f ~/.fzf.zsh ] && source ~/.fzf.zsh

# Oh My Posh prompt (only if oh-my-posh is available)
command -v oh-my-posh &> /dev/null && eval "$(oh-my-posh init zsh --config $HOME/.config/oh-my-posh/theme.json)"

# Tool environment setups
[ -f "$HOME/.local/bin/env" ] && . "$HOME/.local/bin/env"

# Linuxbrew setup (for Linux users who install Homebrew)
[ -f "/home/linuxbrew/.linuxbrew/bin/brew" ] && eval "$(/home/linuxbrew/.linuxbrew/bin/brew shellenv)"

# Local overrides (not tracked in git)
[ -f ~/.zshrc.local ] && source ~/.zshrc.local
